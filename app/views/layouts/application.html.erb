<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <div>Logged in as <%= current_user.username %> | <%= link_to "log out", user_session_path(current_user.id), method: :delete %> </div>
    <% else %>
      <div><%= link_to "Log in", new_user_session_path %> | <%= link_to "Sign up", new_user_path %></div>
    <% end %>
    <% flash.each do |name, message| %>
      <div><%= message %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
